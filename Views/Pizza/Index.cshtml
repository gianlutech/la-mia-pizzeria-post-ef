@{
	Layout = null;
	ViewData["Title"] = "Home Page";

}

@model la_mia_pizzeria_static.Models.listaPizze

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">La mia pizzeria</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>

					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<div class="text-center">
				<h1 class="display-4 pb-5">10mila71 pizza's!!</h1>
				<div><a href="@Url.Action("CreaNuovaPizza", "Pizza")" class="crea-pizza btn-primary btn d-inline">Crea la tua Pizza</a></div>
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Nome</th>
							<th scope="col">Descrizione</th>
							<th scope="col">Foto</th>
							<th scope="col">Prezzo</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var item in Model.pizzas)
							{
								<tr>
									<td>
										<h4><a href="@Url.Action("Show", "Pizza", new {@item.Id})">@item.Name</a></h4>
										<div>
											<a class="btn-warning btn d-inline" href="@Url.Action("AggiornaPizza", "Pizza", @item)">Aggiorna</a>
											<a class="btn-danger btn d-inline" href="@Url.Action("DeletePizza", "Pizza", (Pizza)@item)">Cancella</a>
										</div>
									</td>
									<td>@item.Description</td>
									<td>@item.Price &euro;</td>
									<td><img src="@item.Photo"></td>
								</tr>
							}
						}
					</tbody>
				</table>
			</div>

		</main>
	</div>



	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

